---
interface Props {
    stadium: {
        Stadium: string;
        City: string;
        League: string;
        Visited: "TRUE" | "FALSE";
        Date: string;
        FirstMatch: string;
        With: string;
    }
}

const { stadium } = Astro.props;
---

<div class="stadium-card">
    <div class="header">
        <h3>{stadium.Stadium}</h3>
        <span class={`status ${stadium.Visited === "TRUE" ? "visited" : "not-visited"}`}>
            {stadium.Visited === "TRUE" ? "✓" : "⏳"}
        </span>
    </div>
    <div class="details">
        <div class="info-row">
            <svg class="icon" viewBox="0 0 24 24">
                <path fill="currentColor" d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
            </svg>
            {stadium.City}
        </div>
        <div class="info-row">
            <svg class="icon" viewBox="0 0 24 24">
                <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
            </svg>
            {stadium.League}
        </div>
        {stadium.Visited === "TRUE" && (
            <>
                <div class="info-row">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11z"/>
                    </svg>
                    {stadium.Date}
                </div>
                <div class="info-row">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M3.85 3.15L2.5 4.5l2.79 2.79C3.89 8.79 3 10.79 3 13c0 4.97 4.03 9 9 9 2.21 0 4.21-.89 5.71-2.29l2.79 2.79 1.35-1.35L3.85 3.15zM12 20c-3.86 0-7-3.14-7-7 0-1.7.61-3.26 1.62-4.47l9.85 9.85C15.26 19.39 13.7 20 12 20z"/>
                    </svg>
                    {stadium.FirstMatch}
                </div>
                <div class="info-row">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                    </svg>
                    {stadium.With}
                </div>
            </>
        )}
    </div>
</div>

<style>
    .stadium-card {
        border: 1px solid #eee;
        border-radius: 12px;
        padding: 1.25rem;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid #eee;
    }

    .header h3 {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 600;
    }

    .status {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 0.875rem;
    }

    .visited {
        background: #dcfce7;
        color: #166534;
    }

    .not-visited {
        background: #fee2e2;
        color: #991b1b;
    }

    .info-row {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0.5rem 0;
        color: #4b5563;
    }

    .icon {
        width: 18px;
        height: 18px;
        flex-shrink: 0;
        color: #6b7280;
    }
</style>
